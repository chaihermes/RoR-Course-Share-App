<div class="columns">
  <div class="column is-8 is-centered">
    <%= simple_form_for @product, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

      <%#FIXME: preciso linkar a session do usuário como autor do cadastro do curso %>
       <div class="columns">
        <div class="field column">
          <div class="control">
            <%= f.input :author, label: "Autor", required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="field column">
          <div class="control">
            <%= f.input :title, label: "Título", required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="field column">
          <div class="control">
            <%= f.input :description, label: "Descrição", required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="field column">
          <div class="control">
            <%= f.input :price, label: "Preço", required: true, input_html: { class: "input", maxlength: 7 }, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="field column">
          <div class="control">
            <label class="label">Adicionar imagens</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class: "file-input instrument-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Selecione o arquivo</span>
                  </span>
              </label>
              </div>
          </div>
        </div>
      
        <output id="list"></output>
      <hr />
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Salvar", class: 'button is-primary' %>
        <%= link_to 'Cancelar', products_path, class:'button is-light' %>


      </div>
    <% end %>
  </div>
</div>