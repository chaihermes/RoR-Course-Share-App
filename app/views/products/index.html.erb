<% content_for :header do %>
  <section class="hero is-primary">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">Veja os últimos cursos</h1>
          
      </div>
    </div>
  </section>
<% end %>

<div class="instrument-index-grid pt4">
      <%# @courses é a variável criada no courses.controller pra def index %>
  <% @products.each do |product| %>

    <div class="instrument border-light mr1">
      <div class="instrument-thumb">
         <%= link_to image_tag(product.image_url(:thumb)), product %>
      </div>
  

      <div class="pa3">
        
          <h3 class="fw7 f4 title"><%= link_to product.title, product %></h3>
          <p class="has-text-gray fg pt1">Criado por <%= product.author %></p> <br />
          <p class="has-text-gray fg pt1">Descrição <%= product.description %></p>
        
          <%# number_to_currency é próprio do rails, é um helper: %>
        
          <p class="f3 fw6 has-text-right pt2 price"> <%= number_to_currency(product.price) %> </p> <br/>
          <%= button_to 'Comprar', line_items_path(product_id: product), class: 'button is-primary add-to-cart' %>  <br />
        
     
    
  
        <% if product_author(product) || has_role?(:admin) %>
          <%= link_to 'Editar', edit_product_path(product), class: "button is-small is-info" %>
          <%= link_to 'Deletar', product, method: :delete, data: { confirm: "Você tem certeza que deseja deletar?" }, class: "button is-small is-danger" %>
        <% end %>
      
    </div>
</div>



  <% end %>
</div>
