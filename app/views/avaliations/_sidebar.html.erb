<div class="column is-3 is-offset-1">
    <h3 class="title is-5 has-text-grey-light"> Cursos </h3>

    <ul class="list">
        <% @courses.each do |c| %>
        <li><%= link_to c.title, c %></li>
        <% end %>
    </ul>

    <br/>

  
    <%# para o Admin %>
    <% if has_role?(:admin) %>
      <%= link_to 'Novo curso', new_course_path, class:'button is-info' %>
    <% end %>


</div>
