            <%# </span>
            
            <span class="icon is-small is-left">
              <i class="fa fa-tag"></i>
            </span>
          </div>
        </div>  %>





        <div class="field">
          <label class="label"> Curso </label>
          <div class="control has-icons-left">
            <span class="select">
              <%= f.input_field :product_id, collection: @products.map { |pr| [ pr.title, pr.id ] }, prompt: "Selecione o curso"  %>
            </span>
            
            <span class="icon is-small is-left">
              <i class="fa fa-tag"></i>
            </span>
          </div>
        </div> 












        <div class="field">
          <div class="control">
            <%= f.button :submit, "Salvar avaliação", class:"button is-primary" %>
          </div>
        </div>
      
    <% end %>
  </div>
</div>
