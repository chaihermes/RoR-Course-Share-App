          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :content, label: "Descrição", required: true, input_html: { class:'textarea' }, wrapper: false, label_html: { class: 'label' } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :note, label: "Nota", required: true, input_html: { class:'input' }, wrapper: false, label_html: { class: 'label' } %>
          </div>
        </div>

        <%# <div class="field">
          <label class="label"> Curso </label>
          <div class="control has-icons-left">
