<h1 class="title is-2 has-text-grey">Editar resposta</h1>

<%= simple_form_for([@avaliation, @respond]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :respond, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>

  <%= f.button :submit, 'Atualizar resposta', class:'button is-info' %>
<% end %>